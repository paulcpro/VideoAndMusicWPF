                    <Image Source="./Assets/like-2.png" Width="20" Height="20"/>
                    <Image Source="./Assets/like-2.png"  Width="20" Height="20"/>
                </StackPanel>-->
            </StackPanel>

            <ccontrols:ActualSongBar Margin="0,650,0,0" Width="800" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>

